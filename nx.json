{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "build:main",
          "build:types",
          "test",
          "test:ci"
        ],
        "cacheDirectory": ".cache",
        "useDaemonProcess": false
      }
    }
  },
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "!{projectRoot}/docs/**/*",
      "!{projectRoot}/**/*.bak"
    ],
    "prod": ["default", "!{projectRoot}/**/*.spec.*"],
    "global": [
      "{workspaceRoot}/package.json",
      "{workspaceRoot}/yarn.lock",
      "{workspaceRoot}/babel.config.js",
      "{workspaceRoot}/tsconfig.json",
      "{workspaceRoot}/tsconfig.module.json"
    ],
    "jest": ["{workspaceRoot}/__jest__/**/*", "{workspaceRoot}/jest/**/*"]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "prod",
        "^prod",
        "global",
        "{workspaceRoot}/shared/common-bricks/common-bricks.json"
      ],
      "outputs": [
        "{projectRoot}/dist",
        "{projectRoot}/dist-types",
        "{projectRoot}/.pkgbuild",
        "{projectRoot}/deploy"
      ]
    },
    "build:main": {
      "inputs": [
        "prod",
        "^prod",
        "global",
        "{workspaceRoot}/shared/common-bricks/common-bricks.json"
      ],
      "outputs": [
        "{projectRoot}/dist",
        "{projectRoot}/.pkgbuild",
        "{projectRoot}/deploy"
      ]
    },
    "build:types": {
      "dependsOn": ["^build:types"],
      "inputs": ["prod", "^prod", "global"],
      "outputs": ["{projectRoot}/dist-types"]
    },
    "test": {
      "inputs": ["default", "^prod", "global", "jest"],
      "outputs": ["{projectRoot}/.coverage"]
    },
    "test:ci": {
      "inputs": ["default", "^prod", "global", "jest"],
      "outputs": ["{projectRoot}/.coverage"]
    }
  }
}
